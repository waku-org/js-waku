{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "lib": ["ES2020", "DOM"],
    "typeRoots": ["./node_modules/@types", "./types"]
  },
  "include": ["src/server.ts", "types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
